generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  AUTHOR
  NORMAL
  ADMIN
}

enum ContentTypes {
  BLOG
  ARTICLE
  RANT
}

model User {
  id        Int       @id @default(autoincrement())
  firstname String
  lastname  String
  email     String
  password  String
  role      UserRoles
}

model Content {
  id   Int          @id @default(autoincrement())
  name String       @unique
  type ContentTypes
}
